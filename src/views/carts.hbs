<header style="position: sticky; top: 0; z-index: 1">
  <navbar>
    <div style="background-color: black; padding: 10px 0px">
      <ul
        style="list-style: none; display: flex; justify-content: space-between"
      >
        <li style="padding: 0 5%;">
          <a
            style="color: white; text-decoration: none; font-weight: bold"
            href="/products"
          >Products</a>
        </li>
        {{#if canShowRealtime}}
          <li style="padding: 0 5%;">
            <a
              style="color: white; text-decoration: none; font-weight: bold"
              href="/realTimeProducts"
            >RealTime</a>
          </li>
        {{/if}}
        <li style="padding: 0 5%;">
          <a
            style="color: white; text-decoration: none; font-weight: bold"
            href="/chat"
          >Chat</a>
        </li>
        <li style="padding: 0 5%;">
          <a
            style="color: white; text-decoration: none; font-weight: bold; display: flex"
            href="/carts"
          >Cart</a>
        </li>
        <li style="padding: 0 5%;">
          <a
            style="color: white; text-decoration: none; font-weight: bold"
            href="/api/users/logout"
          >Log out</a>
        </li>
      </ul>
    </div>
  </navbar>
</header>

{{#if products.length}}
  <h1>Welcome to your cart ðŸ›’</h1>

  <table
    class="table"
    id="table"
    cellPadding="10"
    border="1"
    align="center"
    data-cart-id="{{cartId}}"
  >
    <thead>
      <tr>
        <th>Product Name</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Increase</th>
        <th>Decrease</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody id="cartTable">
      {{#each products}}
        <tr>
          <td>{{title}}</td>
          <td>{{quantity}}</td>
          <td>{{price}}</td>
          <td>{{stock}}</td>
          <td align="center"><button
              class="increase"
              data-product-id="{{productId}}"
              data-quantity="{{quantity}}"
              data-stock="{{stock}}"
            >+</button></td>
          <td align="center"><button
              class="decrease"
              data-product-id="{{productId}}"
              data-quantity="{{quantity}}"
            >-</button></td>
          <td align="center"><button
              class="delete"
              data-product-id="{{productId}}"
            >Delete</button></td>
        </tr>
      {{/each}}
    </tbody>
    <tfoot>
      <tr>
        <td colspan="5" align="center">
          <b>Cart Total $</b>
          {{cartTotal}}
        </td>
        <td colspan="2" align="center">
          <button class="purchase">Purchase</button>
        </td>
      </tr>
    </tfoot>
  </table>
{{else}}
  <h2>Your cart is empty</h2>
{{/if}}

<script src="/js/carts.js"></script>